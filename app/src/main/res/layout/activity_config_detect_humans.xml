<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="online.avogadro.opencv4tasker.tasker.ActivityConfigDetectHumansAction"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image name" />

    <EditText
        android:id="@+id/editFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Image name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Engine:" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioEngineClaudeAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/engine_claude" />

        <RadioButton
            android:id="@+id/radioEngineGemini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/engine_gemini" />

        <RadioButton
            android:id="@+id/radioEngineOpenRouter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/engine_openrouter" />

        <RadioButton
            android:id="@+id/radioEngineTensorflowLite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/engine_tensorflow" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK" />

</LinearLayout>
